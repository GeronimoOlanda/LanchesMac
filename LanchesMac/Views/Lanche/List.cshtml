<style>
    *{
        font-family: Arial, Helvetica, sans-serif;
    }
</style>
<div> 
    <h2>@Model.CategoriaAtual</h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var lanche in Model.lanches)
        {
            <div class="col-sm-4 col-sm-4 col-lg-4">
                <p> <img src="@lanche.ImagemURL" style="border-radius: 10px" class="img-fluid" /> </p>
                <h3>Preço: @lanche.Preco.ToString("c")</h3>
                <h4>Lanche: @lanche.Nome</h4>
                <p>@lanche.DescricaoCurta</p>
            </div>
        }
    </div>
</div>